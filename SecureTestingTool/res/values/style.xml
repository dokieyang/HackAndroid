<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CusstomActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/CustomActionBarTabText</item>
    </style>

     <!-- 设置ActionBar Title字体的样式 --> 
    <style name="CusstomActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.Holo.Widget.ActionBar.Title.Own</item>
    </style>

    <style name="TextAppearance.Holo.Widget.ActionBar.Title.Own" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>

     <!-- 设置ActionBar Tab字体的样式 --> 
    <style name="CustomActionBarTabText" parent="@android:style/TextAppearance.Holo.Widget.TabWidget">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>